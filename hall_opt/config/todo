These should be able to be run as

python hallthruster_code.py gen_data.yaml

or

python hallthruster_code.py run_mcmc.yaml

or

python hallthruster_code.py run_map.yaml



output_dir: "map_results"
run_map: true

reference_data: "results_test/results.json"

settings:
  initial_cs: [0.2, 0.1]
  max_iter: 100
  algorithm: 'slsqp'

  output_dir: "mcmc_results"
run_mcmc: true

reference_data: "results_test/results.json"

settings:
  initial_cs: [0.2, 0.1]
  initial_cov: [[1.0, 0.0], [0.0, 1.0]]
  max_iter: 100
